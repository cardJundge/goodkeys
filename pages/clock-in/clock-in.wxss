/* 打卡统计 */
.clock-in-body {
  padding: 24rpx;
}

.switch {
  width: 100%;
  padding: 0 24rpx 24rpx;
}

.switch-tab {
  width: 330rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 1rpx solid #1a65ff;
  padding: 5rpx;
}

.switch-item {
  width: 160rpx;
  height: 50rpx;
  border-radius: 30rpx;
  color: #1a65ff;
}

.switch-active {
  background: #1a65ff;
  color: #fff;
}

.statistics {
  width: 100%;
  height: 500rpx;
  border-radius: 40rpx;
  padding: 24rpx;
  background: url('https://676f-goodkeys-zhlfy-1302053658.tcb.qcloud.la/images/clock_bg.png?sign=b27d7de056b95b439cd06baa86f053c6&t=1591952283') no-repeat center;
  background-size: 100% 100%;
  box-shadow: 0 8px 8px -1px rgba(26, 101, 255, 0.2);
}

.statistics-01 {
  width: 100%;
  color: #fff;
}

.statistics-01>text {
  color: #fff;
}

.statistics-02 {
  width: 230rpx;
  height: 230rpx;
  border-radius: 50%;
  padding: 48rpx 0;
  border: 2px solid rgba(255, 255, 255, 0.5);
}

.statistics-02 text:nth-child(1) {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
}

.statistics-02 text:nth-child(2) {
  font-size: 34rpx;
  color: #fff;
}

.statistics-02 text:nth-child(3) {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
}

.statistics-03 {
  width: 100%;
  color: #fff;
}

.statistics-03-item text:first-child {
  font-size: 48rpx;
}

/* 考勤组切换 */

.attendance-switch {
  width: 100%;
  height: 120rpx;
}

.attendance-switch-item {
  max-width: 320rpx;
  margin-left: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.task-list {
  box-shadow: 0 0 4rpx 0 rgba(0, 0, 0, 0.10);
  border-radius: 20rpx;
}

.task-item {
  width: 100%;
  height: 148rpx;
  padding: 0 24rpx;
  border-bottom: 1px solid #DCDCDC;
  margin: 12rpx 0;
}

.task-item-title {
  height: 90rpx;
  padding: 0 24rpx;
  border-bottom: 1px solid #DCDCDC;
}

.task-item-left {
  width: 240rpx;
}

.task-item-left image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.task-item-left text {
  width: 108rpx;
  word-break: break-all;
}

.task-item-center {
  width: 240rpx;
  text-align: center;
}

.task-item-right {
  width: 240rpx;
  text-align: center;
}

.status-01 {
  color: #1a65ff;
}

.status-02 {
  color: #FF881A;
}

.status-03 {
  color: #19D64D;
}

.status-04 {
  color: #F21AFF;
}

.status-05 {
  color: #e4393c;
}

/* 请假 */

.leave-item {
  box-shadow: 0 0 4rpx 0 rgba(0, 0, 0, 0.10);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.leave-item-title {
  margin-bottom: 24rpx;
}

.leave-item-content>view {
  margin-bottom: 12rpx;
}

.leave-item-content>view>text:first-child {
  color: #A6A6A6;
  margin-right: 8rpx;
}

.leave-item-refuse>text:last-child {
  width: 500rpx;
  word-break: break-all;
}

.leave-item-btn {
  width: 100%;
  padding-top: 24rpx;
}

.leave-item-btn>view {
  width: 150rpx;
  height: 60rpx;
  border-radius: 20rpx;
}

.leave-item-btn>view:first-child {
  border: 1rpx solid #1a65ff;
  color: #1a65ff;
  margin-right: 24rpx;
}

.leave-item-btn>view:last-child {
  background: #1a65ff;
  color: #fff;
}

.leave-item .right image {
  width: 209rpx;
  height: 168rpx;
}

.leave-item .line {
  width: 100%;
  height: 2rpx;
  background: #e4e4e4;
  margin: 12rpx 0 24rpx;
}

.no-data {
  width: 100%;
  color: #8e8e8e;
}

.no-data image {
  width: 418rpx;
  height: 418rpx;
  margin-bottom: 24rpx;
}

.more-data {
  width: 100%;
  line-height: 80rpx;
  text-align: center;
  color: #737373;
}

.attendance-null>image {
  width: 418rpx;
  height: 418rpx;
}

.attendance-null>text {
  color: #8e8e8e;
  margin: 24rpx 0;
}

.attendance-null>view {
  width: 220rpx;
  height: 70rpx;
  border-radius: 8rpx;
  background: #1a65ff;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}