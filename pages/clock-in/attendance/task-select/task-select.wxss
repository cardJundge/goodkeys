/* 作业员选择 */
.select-body {}

.select-top {
  width: 100%;
  height: 100rpx;
  padding: 0 24rpx;
  border-bottom: 6px solid #F2F2F2;
}

.select-top-left-view {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 1px solid #CCCCCC;
  margin-right: 24rpx;
}

.select-top-left-icon {
  margin-right: 18rpx;
  margin-left: -6rpx;
}

.select-box {
  width: 100%;
  padding: 0 24rpx 136rpx;
}

.select-item {
  width: 100%;
  height: 148rpx;
  border-bottom: 1px solid #F2F2F2;
}

.select-item image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin: 0 24rpx 0 10rpx;
}

.btn-box {
  width: 100%;
  height: 112rpx;
  padding: 0 24rpx;
  background: #fff;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  border-top: 1px solid #F2F2F2;
}

.btn-confirm {
  width: 170rpx;
  height: 80rpx;
  background: #1a65ff;
  color: #fff;
  border-radius: 8rpx;
}

checkbox .wx-checkbox-input {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}