/* 新增考勤组 */
.add-top {
  width: 100%;
  padding: 0 24rpx;
  border-bottom: 6px solid #F2F2F2;
}

.add-top-item {
  width: 100%;
  height: 94rpx;
  border-bottom: 1px solid #F2F2F2;
}

.add-top-item>image {
  width: 40rpx;
  height: 40rpx;
}

.add-content-item>view input,
.add-top-item>view input {
  text-align: right;
  font-size: 24rpx;
}

.add-content {
  width: 100%;
  padding: 0 24rpx;
  border-bottom: 6px solid #F2F2F2;
}

.add-content-item {
  width: 100%;
  height: 90rpx;
  border-bottom: 1px solid #F2F2F2;
}

.add-content-item-right input{
  width: 360rpx;
  text-align: right;
}

.add-btn {
  width: 702rpx;
  height: 80rpx;
  margin: 0 auto;
  border-radius: 8rpx;
  background: #1a65ff;
  color: #fff;
  margin-top: 165rpx;
  margin-bottom: 24rpx;
  font-size: 30rpx;
}

.add-del-btn {
  width: 702rpx;
  height: 80rpx;
  margin: 0 auto;
  box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.10);
  border-radius: 8rpx;
}

.taskface-box {
  width: 170rpx;
  padding: 0 12rpx;
}

.taskface-box-image {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 1px solid #fff;
}

.taskface-box-image:first-of-type {
  transform: translateX(0px);
}