.add-quota-body {
}

.commpany {
  width: 100%;
  height: 170rpx;
}

.commpany-bg {
  width: 100%;
  height: 90rpx;
  background: #1a65ff;
  border-radius: 0 0 30rpx 30rpx;
  position: relative;
}

.commpany-info {
  width: 100%;
  height: 158rpx;
  position: absolute;
  left: 0;
  bottom: -80rpx;
}

.commpany-info-card {
  width: 702rpx;
  height: 158rpx;
  margin: 0 auto;
  background: #fff;
  box-shadow: 0 0 4rpx 2rpx rgba(0, 0, 0, 0.10);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
}

.commpany-info-card image {
  width: 110rpx;
  height: 110rpx;
  border: 1rpx solid #1a65ff;
  border-radius: 50%;
  margin: 0 24rpx;
}

.commpany-info-card-text {
  display: flex;
  flex-direction: column;
}

.commpany-info-card-text text:first-child {
  font-size: 36rpx;
}

.term-title {
  width: 100%;
  height: 98rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #dbdbdb;
}

.term-title text {
  font-size: 36rpx;
}

.term-btn-bar {
  width: 185rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.term-btn-bar image {
  width: 46rpx;
  height: 46rpx;
}

.programme {
}

.programme-title {
  width: 100%;
  height: 98rpx;
  padding: 0 24rpx;
  line-height: 98rpx;
  font-size: 36rpx;
}

.programme-content {
  width: 100%;
  margin: 0 24rpx;
  display: flex;
  flex-wrap: wrap;
}

.programme-item {
  width: 338rpx;
  height: 284rpx;
  background: #fff;
  color: #1a65ff;
  box-shadow: 0 0 4rpx 2rpx rgba(0, 0, 0, 0.10);
  border-radius: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  margin-right: 26rpx;
  margin-bottom: 24rpx;
}

.programme-item-active {
  width: 338rpx;
  height: 284rpx;
  background: #1a65ff;
  color: #fff;
  box-shadow: 0 0 4rpx 2rpx rgba(0, 0, 0, 0.10);
  border-radius: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  margin-right: 26rpx;
  margin-bottom: 24rpx;
}

.programme-item-num {
  width: 290rpx;
  height: 76rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.10);
  display: flex;
  align-items: center;
  justify-content: center;
}

.programme-item-num image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
}

.programme-item-money {
  width: 290rpx;
  height: 117rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.10);
  display: flex;
  align-items: center;
  justify-content: center;
}

.text-active {
  color: #35383a;
}

.programme-item-money text:first-child {
  font-size: 50rpx;
}

.programme-item-time {
  width: 290rpx;
  height: 76rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.programme-item-time-active {
  width: 290rpx;
  height: 76rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #35383a;
}

.purchase-btn {
  width: 100%;
  height: 90rpx;
  background: #1a65ff;
  color: #fff;
  font-size: 36rpx;
  line-height: 90rpx;
  text-align: center;
  position: fixed;
  left: 0;
  bottom: 0;
}

.total {
  width: 100%;
  padding: 0 24rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.total text:first-child {
  color: #898989;
}

.total text:last-child {
  font-size: 50rpx;
  color: #1a65ff;
}
