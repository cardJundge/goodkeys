/* 登录 */

page {
  height: 100%;
}

.login-body {
  width: 100%;
  min-height: 100%;
  background: url('https://6368-chedou-service-1257955119.tcb.qcloud.la/images/login_bg.png?sign=81381b2c2816cabd61d13d1202c2721f&t=1570591082') no-repeat center;
  background-size: 100% 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-content {
  width: 600rpx;
  height: 788rpx;
  background: url('https://6368-chedou-service-1257955119.tcb.qcloud.la/images/login_content_bg.png?sign=c6fa4db103cd25fb21e4a2be2b40aca8&t=1570591603') no-repeat center;
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-content-logo {
  width: 120rpx;
  height: 120rpx;
  margin: 42rpx 0 24rpx;
  border-radius: 50%;
}

.login-content-title {
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  margin-bottom: 54rpx;
}

/* .login-content-form {
} */

.input-box {
  width: 450rpx;
  height: 80rpx;
  box-shadow: 0 0 6rpx 0 rgba(0, 0, 0, 0.2);
  border-radius: 60rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.input-box image {
  width: 42rpx;
  height: 42rpx;
  margin: 0 15rpx 0 30rpx;
}

/* .input-box input {
} */

.operation-bar {
  width: 450rpx;
  height: 42rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #1a84ff;
  margin-bottom: 42rpx;
}

.btn-box {
  width: 450rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #1a65ff;
  border-radius: 40rpx;
  font-family: PingFangSC-Medium;
  font-size: 42rpx;
  color: #fff;
  border: 0;
}

.beizhu {
  position: fixed;
  bottom: 30rpx;
  color: #fff;
  font-size: 24rpx;
  width: 702rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  text-align: center;
}
