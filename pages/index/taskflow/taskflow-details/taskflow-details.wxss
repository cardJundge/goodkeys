/* 自定义模块详情 */

.details-top {
  padding: 12rpx 24rpx;
}

.details-top .top-item {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #dbdbdb;
  font-size: 24rpx;
}

.details-top .top-item-img {
  width: 100%;
  height: 120rpx;
}

.top-item-img-box {
  display: flex;
  align-items: center;
}

.top-item-img-item {
  padding: 10rpx;
}

.top-item-img-item image {
  width: 80rpx;
  height: 80rpx;
}

.details-content {
}

.unfold {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.content-tab {
  width: 100%;
  padding: 12rpx 24rpx;
  display: flex;
  align-items: center;
  color: #828282;
}

.tab-item {
  line-height: 48rpx;
  margin-right: 36rpx;
  font-size: 24rpx;
  position: relative;
}

.tab-item .line {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 50rpx;
  height: 6rpx;
  background: #1a65ff;
}

.tab-active {
  font-size: 30rpx;
  color: #242429;
}

.content-box {
}

.task-input, .approval, .evaluate {
  width: 100%;
  padding: 12rpx 24rpx;
}

.content-box-item {
  width: 100%;
  padding: 24rpx 12rpx;
  box-shadow: 0 0 6rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  margin: 24rpx 0;
}

.item-incomplete {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-incomplete>view {
  width: 166rpx;
  height: 60rpx;
  background: #1a65ff;
  border-radius: 30rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.complete-option-btn {
  width: 166rpx;
  height: 60rpx;
  background: #1a65ff;
  border-radius: 30rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.item-complete {
  position: relative;
}

.item-complete-title {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-complete-title>view {
  width: 166rpx;
  height: 60rpx;
  background: #f2f2f2;
  border-radius: 30rpx;
  color: #989898;
  display: flex;
  justify-content: center;
  align-items: center;
}

.item-complete-text {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 12rpx;
  border-bottom: 1px solid #ececec;
  padding-bottom: 24rpx;
}

.item-complete-text view {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.item-complete-text view text:nth-child(1) {
  width: 60rpx;
  color: #9c9c9c;
  margin-right: 24rpx;
}

.item-complete-text view text:nth-child(2) {
  width: 570rpx;
  position: relative;
}

.item-complete-text view .location-icon {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  right: 0;
}

.item-complete-change {
  color: #1a65ff;
  position: absolute;
  right: 12rpx;
  bottom: 0;
}

.evaluate {
  width: 100%;
  padding: 12rpx 24rpx;
}

.evaluate-item {
  width: 100%;
  padding: 32rpx 12rpx;
  box-shadow: 0 0 6rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  margin: 24rpx 0;
}

.evaluate-item>view {
  font-size: 24rpx;
  margin-top: 32rpx;
}

.evaluate-item>view>text:first-child {
  color: #9c9c9c;
  margin-right: 24rpx;
}

.item-complete-image {
  display: flex;
  flex-direction: column;
}

.item-complete-image .image-box {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 18rpx;
}

.item-complete-image .image-box .image-item {
  padding: 12rpx;
}

.item-complete-image .image-box .image-item image {
  width: 180rpx;
  height: 180rpx;
  border: 1rpx solid #eee;
  border-radius: 20rpx;
}

.no-evaluate {
  width: 100%;
  padding: 48rpx 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.no-evaluate text {
  color: #9c9c9c;
}

.no-evaluate image {
  width: 400rpx;
  height: 400rpx;

}
