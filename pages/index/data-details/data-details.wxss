/* 数据统计详情 */
ec-canvas {
  width: 100%;
  height: 100%;
}

.defalut{
  width: 100%;
  height: 260rpx;
  background: #1a65ff;
  position: fixed;
  top: 0rpx;
  z-index: -1;
}

.data-details-body {
  position: absolute;
  top: 30rpx;
  width: 702rpx;
  height: 400rpx;
  bottom: 0;
  right: 0;
  left: 0;
  margin: 0 auto;
  background: #ffffff;
  border-radius: 20rpx;
  z-index: 100;
  border: 1rpx solid rgba(216, 216, 216, 0.5);
  box-shadow: 0 0 2rpx 2rpx rgba(216, 216, 216, 0.5);
} 

.chart-date{
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  display: flex;
  z-index: 100;
}

.chart-date-text{
  width: 130rpx;
  padding: 8rpx 0;
  border: 1rpx solid rgba(216, 216, 216, 0.5);
  text-align: center;
  margin-right: 20rpx;
  color: #1a65ff;
  border-radius: 50rpx;
  font-size: 28rpx;
  background: #ffffff;
}

.item-active {
  color: #fff;
  background: #1a65ff;
}

.task-total{
  width: 702rpx;
  margin: 24rpx;
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
  position: relative;
  top: 480rpx;
}

.task-total text:last-child{
  color: #a7a7a7;
}

.task-whole-mode{
  width: 702rpx;
  margin: 0 auto;
  padding: 0 24rpx;
  margin-bottom: 48rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(216, 216, 216, 0.5);
  box-shadow: 0 0 2rpx 2rpx rgba(216, 216, 216, 0.5);
  position: relative;
  top: 480rpx;
}

.task-category{
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  align-items: center;
  width: 100%;
  border-bottom: 1rpx solid rgba(216, 216, 216, 0.5);
}