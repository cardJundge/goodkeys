/* 转单 */
page {
  height: 100%;
}

.transfer-body {
 
}

.transfer-form {
  width: 100%;
  padding: 0 24rpx;
}

.form-item {
  width: 100%;
  /* height: 80rpx; */
  /* line-height: 80rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #F2F2F2;
  padding: 24rpx 0;
}

.form-item label {
  width: 320rpx;
  color: #8D8D8D;
}

.form-item input {
  text-align: right
}

.form-item-textarea {
  height: 280rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.form-item-textarea textarea {
  height: 200rpx;
}

.transfer-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #1a65ff;
  color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-radius: 0;
}

.transfer-success {
   height: 100%;
   display: flex;
   flex-direction: column;
   align-items: center;
   color: #1a65ff;
   padding-top: 240rpx;
}

.transfer-success text {
  margin-top: 24rpx;
}
