/* 支付页面 */
page {
  height: 100%;
  background: #F2F2F2;
}

.payment-body {
}

.payment-top {
  width: 100%;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.payment-top-left {
  display: flex;
  align-items: center;
}

.payment-top-left view {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.payment-top-left view:nth-child(1) {
  background: #21c65c;
}

.payment-top-left view:nth-child(2) {
  background: #eaa624;
}

.payment-top-left text {
  font-size: 24rpx;
  color: rgba(26, 132, 255, 0.50);
}

.payment-top-right {
  display: flex;
  align-items: center;
}

.payment-top-right text:nth-child(1) {
  font-size: 24rpx;
  color: rgba(26, 132, 255, 0.50);
}

.payment-top-right text:nth-child(2) {
  font-size: 50rpx;
  color: #1a84ff;
}

.payment-content {
  padding: 24rpx;
  margin-bottom: 125rpx;
}

.payment-content-title {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.payment-content-title view:nth-child(1) {
  width: 4rpx;
  height: 20rpx;
  background: #EAA624;
  margin-right: 12rpx;
}

.payment-content-title view:nth-child(2) {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  font-size: 24rpx;
  color: #1A84FF;
}

.payment-content-title view:nth-child(2) text:nth-child(2) {
  color: rgba(26,132,255,0.50);
}

.payment-content-list {

}

.payment-content-item {
  width: 100%;
  height: 104rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  margin-bottom: 12rpx;
  border-radius: 8rpx;
}

.payment-content-item>view {
  display: flex;
  align-items: center;
}

.payment-content-item>view image {
  width: 56rpx;
  height: 56rpx;
  margin-right: 24rpx;
}

.payment-btn {
  margin: 0 auto;
  width: 702rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #1a65ff;
  color: #fff;
  border-radius: 58rpx;
}