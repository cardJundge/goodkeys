/* 转单公司租选择 */
page {
  height: 100%;
}

.company-body {
  height: 100%;
  display: flex;
  position: relative;
}

.left-scroll {
  font-size: 30rpx;
  width: 270rpx;
  background: #F1F1F1;
  position: fixed;
  color: #6d6d6d;
}

.left-scroll view {
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.right-scroll {
  position: absolute;
  right: 0;
  width: 480rpx;
}

.list-title {
  width: 100%;
  /* height: 60rpx; */
  /* background: #F1F1F1; */
}

.list-content {

}

.list-item {
  width: 100%;
  height: 60rpx;
  border-bottom: 1px solid #EBEBEB;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
}

::-webkit-scrollbar {
  width: 6px;
  height: 6px;
  background-color: #fff;
}

::-webkit-scrollbar-track {
  height: 20rpx;
  color: black;
}

.active {
  color: #242429;
  background: #fff;
}

.company-btn {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #1a65ff;
  color: #fff;
  font-size: 36rpx;
}
