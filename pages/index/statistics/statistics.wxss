/* 数据统计-改版 */

page {
   background: #f8f8f8;
 }
 
 .container {
   display: flex;
   flex-direction: column;
   width: 100%;
   box-sizing: border-box;
   padding-bottom: 100rpx;
 }
 
 .top-whole {
   width: 100%;
   height: 60rpx;
   background: #1a65ff;
 }
 
 .modulename-box {
   height: 60rpx;
   background: #1a65ff;
   display: flex;
   color: white;
   padding: 0 24rpx;
 }
 
 .modulename-item {
   display: flex;
   flex-direction: column;
   text-overflow:  ellipsis;
   white-space: nowrap;
   padding-right: 36rpx;
   justify-content: flex-end;
   align-items: center;
   font-size: 24rpx;
 }
 
 .punctuation{
   width: 16rpx;
   height: 8rpx;
   border-top-left-radius: 24rpx;
   border-top-right-radius: 24rpx;
   background: #fff;
 }
 
 .tab-active {
   font-size: 30rpx;
   margin-bottom: 4rpx;
 }
 
 .tab-unchecked{
   margin-bottom: 14rpx;
   color: rgba(255, 255, 255, 0.8);
 }
 
 .statistics-box{
   margin: 24rpx;
   background: url("https://6661-fanqizhalianmeng-8ygjc-1300247030.tcb.qcloud.la/test/pic_beijing%402x.png?sign=db459fd6fde695d9109ba12dce3479da&t=1585795993") center no-repeat;
   background-size: 100% 100%;
   border-radius: 24rpx;
   height: 300rpx;
   color: white;
   display: flex;
   flex-direction: column;
   align-items: center;
   justify-content: space-around;
 }
 
 .top-title {
   width: 100%;
   height: 90rpx;
   display: flex;
   align-items: center;
   justify-content: center;
 }
 
 .top-content-num {
   display: flex;
   width: 100%;
   justify-content: space-around;
 }
 
 .top-num {
   display: flex;
   flex-direction: column;
   align-items: center;
   height: 110rpx;
   justify-content: space-between;
   width: 200rpx;
 }
 
 .top-num>view:first-child {
   font-size: 50rpx;
 }
 
 .top-num>view:last-child {
   color: rgba(255, 255, 255, 0.7);
 }
 
 .top-content-msg {
   font-size: 24rpx;
   color: rgba(255, 255, 255, 0.7);
   width: 90%;
   margin: 34rpx auto;
   text-align: center;
 }
 
 .statistics-table-box{
   margin: 24rpx;
   box-shadow: 0 0 4rpx 2rpx rgba(216,216,216,0.5);
   border-radius: 24rpx;
   display: flex;
   flex-direction: column;
   align-items: center;
   padding-bottom: 30rpx;
   background: white;
 }
 
 .nodatatext{
   font-size: 24rpx;
 }
 
 .statistics-table-text{
   display: flex;
   width: 90%;
   margin: 24rpx 5%;
   justify-content: space-between;
   align-items: center;
 }
 
 .statistics-table-text>text:first-child{
   font-family: "黑体";
 }
 
 .statistics-table-text>text:last-child{
   padding: 8rpx 24rpx;
   background: #1a65ff;
   color: white;
   border-radius: 24rpx;
   font-size: 24rpx;
   letter-spacing: 1rpx;
 }
 /* 表格（综合） */
 /* 综合 */
.all {
  width: 702rpx;
  margin: 24rpx auto;
  padding: 24rpx;
  background: #fff;
  border-radius: 20rpx;
}

.all-content {
  margin-top: 24rpx;
}

.table {
  border: 1px solid #ECECEC;
  border-right: 0;
  border-bottom: 0;
  width: 100%;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.th,
.td {
  padding: 12rpx 0;
  border-bottom: 1px solid #ECECEC;
  border-right: 1px solid #ECECEC;
  text-align: center;
  width: 100%;
}

.th {
  font-size: 24rpx;
  color: #25252A;
}

.td {
  font-size: 24rpx;
  color: #9C9C9C;
}
 
 /* 暂无数据样式 */
.no-data {
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
 }
 
 .no-data image {
   width: 260rpx;
   height: 260rpx;
 }

 .no-auth image {
    width: 418rpx;
    height: 418rpx;
 }
 
 .no-data text {
   color: #9C9C9C;
   font-size: 24rpx;
 }

 .no-auth text {
   font-size: 30rpx;
 }
 
 