.data-content {
  width: 100%;
  height: 202rpx;
  position: absolute;
  bottom: -100rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.data-item {
  width: 202rpx;
  height: 202rpx;
  box-shadow: 0 0 4rpx 0 rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  background-color: #fff;
