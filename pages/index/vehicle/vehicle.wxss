/* 车物调查 */
@import "../common-top/common-top.wxss";
.vehicle-body {
}

/* 刷新 */

.refresh-img {
  padding-top: 36rpx;
}

.refresh-img image{
  width: 100%;
  height: 100rpx;
}

/* 状态选择 */

.status-box {
  width: 100%;
  height: 136rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: nowrap;
  padding: 0 24rpx;
  white-space: nowrap;
  position: fixed;
  top: 0;
  background: #fff;
  padding-top: 76rpx;
}

/* 筛选状态选择 */

.screen-box {
  width: 100%;
  height: 160rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: nowrap;
  padding: 76rpx 24rpx 24rpx;
  position: fixed;
  top: 0;
  border-bottom: 2px solid #f7f7f7;
  background: #fff;
}

.screen-item {
  display: flex;
  align-items: center;
}

.screen-item text {
  margin-right: 12rpx;
}

.status-item {
  padding: 0 24rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #e7efff;
  color: #1a65ff;
  border-radius: 30rpx;
  display: inline-block;
  margin-right: 12rpx;
  margin-left: 12rpx;
}

.status-item:first-child {
  margin-left: 0;
}

.status-item:last-child {
 margin-right: 0;
}

.select-active {
  background: #1a65ff;
  color: #fff;
  display: inline-block;
}

.more-data {
  width: 100%;
  line-height: 80rpx;
  text-align: center;
  color: #737373;
}

.no-data {
  width: 100%;
  margin-top: 184rpx;
  text-align: center;
  color: #737373;
}

