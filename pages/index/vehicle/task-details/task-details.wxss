} */

.image-item image {
  width: 200rpx;
  height: 200rpx;
}

.voice-item {
  width: 33.33%;
  /* border-radius: 10rpx; */
  /* border: 1rpx solid #eee; */
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 14rpx;
  /* margin: 0 24rpx 24rpx 24rpx; */
  /* margin-right: 14rpx; */
  /* margin-bottom: 14rpx; */
}

/* .voice-item:nth-child(3n + 1) {
   margin: 0 24rpx 24rpx 0;
} */

.voice-item image {
  width: 200rpx;
  height: 200rpx;
}
.voice-item video {
   width: 200rpx;
  height: 200rpx;
}

.reject-mode {
  width: 100%;
  margin: 24rpx 0;
  box-shadow: 0 0 2rpx 2rpx rgba(216, 216, 216, 0.5);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.reject-mode text {
  padding: 24rpx;
}

.footer {
  width: 750rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  background: #1a65ff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.reject-list {
  box-shadow: 0 0 2rpx 2rpx rgba(216, 216, 216, 0.5);
  border-radius: 20rpx;
  width: 100%;
  margin-bottom: 24rpx;
}

.reject-title {
  padding: 12rpx 24rpx;
}

.reject-item {
  width: 100%;
  padding: 12rpx 24rpx;
}

.reject-item-time text:first-child {
  width: 48rpx;
}

.reject-item-time text:last-child {
  font-size: 24rpx;
}

.reject-item-reason {
  margin-left: 48rpx;
  font-size: 24rpx;
  color: #a9a9a9;
}