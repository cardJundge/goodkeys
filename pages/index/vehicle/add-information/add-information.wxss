.related-title-item {
  display: flex;
  height: 90rpx;
  align-items: center;
  border-bottom: 1rpx solid rgba(216, 216, 216, 0.5);
  margin-bottom: 20rpx;
}

.related-title-item text {
  width: 140rpx;
}

.related-title-item input {
  width: 70%;
}

.related-info-item {
  width: 100%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 0 20rpx 20rpx;
  font-size: 22rpx;
  text-align: center;
}

.related-info-item .camera {
  width: 140rpx;
  height: 140rpx;
  border: 1px solid #ebebeb;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 16rpx 32rpx;
}

.related-info-item .camera image {
  width: 70rpx;
  height: 60rpx;
}

.related-info-item .image-item {
  width: 140rpx;
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin: 16rpx 32rpx;
}

.related-info-item .image-item .pic {
  width: 140rpx;
  height: 140rpx;
}

.related-info-item .image-item .del {
  color: #ef5959;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: -11rpx;
  right: -11rpx;
}

.add-btn {
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  height: 80rpx;
  border: 1rpx dashed #1a65ff;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #1a65ff;
  border-radius: 10rpx;
}

.sure-btn {
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #1a65ff;
  color: #fff;
  border-radius: 0;
  position: fixed;
  bottom: 0;
  z-index: 9;
}
