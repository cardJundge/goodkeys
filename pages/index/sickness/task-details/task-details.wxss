/* 调查任务 */

.i-collapse-item {
  border-top: 0;
}

.task-details-body {
  width: 702rpx;
  margin: 0 auto;
}

.title-tab {
  width: 100%;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  color: #afafaf;
}

.tab-item {
  margin-right: 24rpx;
}

.tab-active {
  font-size: 36rpx;
  color: #242429;
}

.record-whole {
  box-shadow: 0 0 2rpx 2rpx rgba(216, 216, 216, 0.5);
  border-radius: 20rpx;
  width: 100%;
  margin-bottom: 24rpx;
  /* font-size: 34rpx; */
}

.record-whole .no-data {
  line-height: 90rpx;
  padding: 0 24rpx;
  color: #777;
  /* font-size: 28rpx; */
}

.record {
  width: 100%;
  display: flex;
  align-items: center;
  position: relative;
  height: 90rpx;
  border-bottom: 1rpx dashed rgba(216, 216, 216, 0.5);
}

.delete {
  width: 100rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #1a65ff;
  border: 1rpx solid #1a65ff;
  border-radius: 12rpx;
  position: absolute;
  top: 15rpx;
  right: 30rpx;
}

.form-item {
  display: flex;
  justify-content: space-between;
  /* padding: 0 24rpx; */
  height: 90rpx;
  align-items: center;
  /* font-size: 30rpx; */
  border-bottom: 1rpx solid rgba(216, 216, 216, 0.5);
}

.colorgray {
  color: #a9a9a9;
}

.colorlight {
  color: #000;
}

.assessor {
  text-align: right;
  color: #a9a9a9;
}

.assessor1 {
  color: #a9a9a9;
}

.mode-style {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  height: auto;
}

.mode-style label {
  height: 90rpx;
  line-height: 90rpx;
}

.mode-style text {
  width: 100%;
  line-height: 45rpx;
}

.investigation {
  /* padding: 0 24rpx; *//* font-size: 30rpx; */
  display: flex;
  flex-direction: column;
  /* margin-bottom: 100rpx; */
}

.investigation label {
  margin: 14rpx 0;
}

.image-cell {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 14rpx;
}

.image-item {
  width: 33.33%;
  position: relative;
  /* border-radius: 10rpx; */
  display: flex;
  justify-content: center;
  /* border: 1rpx solid #eee; *//* margin: 0 12rpx 24rpx 12rpx; */
  margin-bottom: 14rpx;
  /* text-align: center; */
}

