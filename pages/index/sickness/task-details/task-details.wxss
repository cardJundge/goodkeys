} */

.image-item image {
  width: 200rpx;
  height: 200rpx;
}

.voice-item {
  width: 33.33%;
  /* border-radius: 10rpx; *//* border: 1rpx solid #eee; */
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 14rpx;
  /* margin: 0 24rpx 24rpx 24rpx; *//* margin-right: 14rpx; *//* margin-bottom: 14rpx; */
}

/* .voice-item:nth-child(3n + 1) {
   margin: 0 24rpx 24rpx 0;
} */

.voice-item image {
  width: 200rpx;
  height: 200rpx;
}

.reject-mode {
  width: 100%;
  margin: 24rpx 0;
  box-shadow: 0 0 2rpx 2rpx rgba(216, 216, 216, 0.5);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.reject-mode text {
  padding: 24rpx;
}

.requirement {
  padding: 24rpx;
  box-shadow: 0 0 6rpx 0 rgba(0, 0, 0, 0.10);
  border-radius: 20rpx;
  color: #afafaf;
}

.requirement-title {
  color: #242429;
  margin-bottom: 12rpx;
}
