.whole-base-tip {
  display: flex;
  line-height: 50rpx;
}

.base {
  color: #bbb9b9;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, sans-serif;
  letter-spacing: 1rpx;
  display: flex;
  flex-direction: column;
  align-content: center;
  margin-right: 12rpx;
}

.active {
  color: #000;
  /* border-bottom: 5rpx solid #000; */
  font-weight: 600;
  font-size: 30rpx;
  width: 200rpx;
  margin-right: 12rpx;
  /* padding-top: 10rpx !important; */
}

.base-infor {
  border-radius: 20rpx;
  border: 1rpx solid rgba(216, 216, 216, 0.5);
  margin-top: 16rpx;
}

.base-item {
  box-shadow: none;
  border-bottom: 1rpx solid rgba(216, 216, 216, 0.5);
  border-radius: 0;
  height: 80rpx;
  padding: 0 24rpx;
  width: 100%;
}

.base-item text:first-child {
  width: 320rpx;
}

.accidentstyle {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 12rpx 24rpx;
  border-bottom: 1rpx solid rgba(216, 216, 216, 0.5);
}

.accidentstyle text {
  line-height: 45rpx;
}

.pic-mode {
  width: 100%;
  margin: 3% 0;
  border-radius: 20rpx;
  box-shadow: 0 0 2rpx 2rpx rgba(216, 216, 216, 0.5);
  display: flex;
  flex-direction: column;
}

.pic-mode text {
  padding: 3% 0 0 3%;
}

.whole-data-img {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 12rpx 24rpx;
}

.data-list {
  width: 154rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  margin: 12rpx 24rpx 0 0;
}

.data-list image {
  width: 154rpx;
  height: 154rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
}

.data-list video {
  width: 170rpx;
}

input {
  text-align: right;
}

