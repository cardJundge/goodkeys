.item-content {
  display: flex;
  flex-direction: column;
}

.address {
  color: #bbb9b9;
  font-size: 24rpx;
  padding-left: 50rpx;
}

.task-info {
  color: #bbb9b9;
  font-size: 24rpx;
  padding-left: 50rpx;
}

.item-result{
  width: 180rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  color: #fff;
}

.status04 {
  background: #d0d0d0;
}

.status05 {
  color: #1a65ff;
  border: 1rpx solid #1a65ff;
}

