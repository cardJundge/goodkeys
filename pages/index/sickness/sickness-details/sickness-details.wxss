.no-info {
  padding: 78rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no-info text {
  color: #aeaeae;
}

.operation-box {
  width: 750rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  color: #fff;
  background: #1a65ff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.operation-item {
  height: 90rpx;
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 24rpx;
}

.modal-item {
  padding: 12rpx 0;
}

.modal-item text {
  text-align: left;
}

.modal-item text:first-child{
  margin-right: 24rpx;
}

.modal-item text:last-child {
  color: #242429;
}

.modal-item-remark {
  display: flex;
  flex-direction: column;
}
