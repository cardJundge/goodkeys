/* 疾病调查详情 */

.disease-step {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.disease-step text {
  width: 220rpx;
  height: 58rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(181, 209, 250, 0.5);
  color: #1a65ff;
  border-radius: 50rpx;
  border: 1rpx solid rgba(181, 209, 250, 0.5);
  font-size: 28rpx;
}

.disease-content {
  width: 92%;
  margin: 0 4%;
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
}

.disease-item {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  border-bottom: 1rpx solid #eee;
}

.whole-task {
  width: 702rpx;
  margin: 24rpx 24rpx 48rpx;
  display: flex;
  flex-direction: column;
  padding-bottom: 124rpx;
}

.whole-task-tip {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, sans-serif;
  letter-spacing: 1rpx;
  display: flex;
}

.line {
  width: 50rpx;
  height: 6rpx;
  background: #1a65ff;
  margin-top: 2rpx;
}

.task-list {
  box-shadow: 0 0 2rpx 2rpx rgba(216, 216, 216, 0.5);
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 24rpx;
  margin: 12rpx 0;
  align-items: center;
}

