.loading-img {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx;
}

.loading-img image {
  width: 40rpx;
  height: 40rpx;
}

.list-top {
  width: 100%;
  height: 60rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
}

.search-bg {
  width: 100%;
  height: 30rpx;
  background: #1a65ff;
  border-radius: 0 0 20rpx 20rpx;
  position: relative;
}

.search-box {
  width: 100%;
  height: 60rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  bottom: -30rpx;
  top: 0;
  left: 0;
}

.search {
  width: 612rpx;
  height: 60rpx;
  background: #fff;
  border: 2rpx solid #f2f2f2;
  border-radius: 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
}

.search image {
  width: 36rpx;
  height: 36rpx;
}

.list-item {
  width: 100%;
  height: 160rpx;
  border-bottom: 1rpx solid #f7f7f7;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
}

.list-item-left {
  width: 480rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.list-item-left text:first-child {
  margin-bottom: 12rpx;
  word-break: break-all;
  word-wrap: break-word;
}

.list-item-left text:last-child {
  font-size: 24rpx;
  color: #737373;
}

.list-item-right {
  width: 180rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
}

.add {
  width: 60rpx;
  height: 60rpx;
}

.status01 {
  background: #1a65ff;
  color: #fff;
}

.status02 {
  background: #14d680;
  color: #fff;
}

.status03 {
  background: #ffa91a;
  color: #fff;
}

.status04 {
  background: #f2f2f2;
  color: #989898;
}

.status05 {
  color: #1a65ff;
  border: 1rpx solid #1a65ff;
}

.status06 {
  background: #ff451a;
  color: #fff;
}