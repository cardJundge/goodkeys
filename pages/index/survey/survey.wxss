/* 查勘定损 */
@import "../common-top/common-top.wxss";

/* 状态选择 */

.status-box {
  width: 100%;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 60rpx;
}

.status-item {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #e7efff;
  color: #1a65ff;
  border-radius: 30rpx;
}

.select-active {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #1a65ff;
  color: #fff;
  border-radius: 30rpx;
}

.loading-img {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-img image {
  width: 40rpx;
  height: 40rpx;
}

.more-data {
  width: 100%;
  line-height: 80rpx;
  text-align: center;
  color: #737373;
}

.no-data {
  width: 100%;
  margin-top: 120rpx;
  text-align: center;
  color: #737373;
}
