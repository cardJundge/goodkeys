/* 添加模块---》第一步 */

.first-body {
}

.first-title {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
}

.first-title image {
  width: 612rpx;
  height: 68rpx;
}

.first-content {
}

.form-name {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  border-bottom: 1px solid #e9e9e9;
}

.first-content label {
  width: 144rpx;
}

.form-icon {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  border-bottom: 1px solid #e9e9e9;
}

.form-icon-right {
  display: flex;
  align-items: center;
}

.form-icon-right image {
  width: 62rpx;
  height: 62rpx;
  margin-right: 24rpx;
}
