/* 编辑模块 */

.first-name {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  border-bottom: 1px solid #e9e9e9;
}

.first-name label {
  margin-right: 24rpx;
}

.first-icon {
  width: 100%;
  height: 114rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  border-bottom: 24rpx solid #F9F9F9;
}

.first-icon-right {
  display: flex;
  align-items: center;
}

.first-icon-right image {
  width: 62rpx;
  height: 62rpx;
  margin-right: 24rpx;
}

.second,
.task-input,
.approval,
.evaluate {
  padding: 0 24rpx;
}

.info-title {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #E9E9E9;
}

.info-content {}

.info-item {
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #E9E9E9;
  color: #909090;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.edit-mark {
  width: 100%;
  height: 114rpx;
  display: flex;
  align-items: center;
  color: #1a65ff;
  border-bottom: 24rpx solid #F9F9F9;
}

.edit-mark text {
  margin-left: 12rpx;
}
