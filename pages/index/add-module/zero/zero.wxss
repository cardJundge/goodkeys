/* 创建模块====》开始页面 */
page {
  width: 100%;
  height: 100%;
}

.zero-body {
  width: 100%;
  height: 100%;
}

.system,
.define {
  width: 100%;
  padding: 0 24rpx;
}

.title {
  font-size: 36rpx;
  padding: 24rpx 0;
}

.system-list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.system-item {
  width: 340rpx;
  height: 154rpx;
  box-shadow: 0 0 4rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  margin-bottom: 22rpx;
  display: flex;
  align-items: center;
  padding: 24rpx;
}

.system-item .left {
  width: 106rpx;
  height: 106rpx;
  margin-right: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.system-item-text {
  width: 128rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.system-item-text text {
  font-size: 32rpx;
  color: #242429;
}

.define-list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.define-item {
  width: 174rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* margin-right: 72rpx; */
  margin-bottom: 24rpx;
}

/* .define-item:nth-child(4n) {
  margin-right: 0;
} */

.define-item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 12rpx;
}

.define-item text {
  color: #838383;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

.list-item-left {
  width: 110rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list-item-left image {
  width: 62rpx;
  height: 62rpx;
}

.list-item-right {
  width: 640rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #E9E9E9;
  padding-right: 24rpx;
}

.list-item text {
  font-size: 32rpx;
  color: #242429;
  width: 128rpx;
}

.qms {
  width: 100%;
  height: 100%;
}

.qms-title {
  width: 100%;
  padding: 24rpx;
  font-size: 36rpx;
}

.qms-title text:first-child {
  font-size: 36rpx;
}

.qms-content {
  width: 100%;
  padding: 0 24rpx 34rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.qms-item {
  width: 340rpx;
  height: 126rpx;
  box-shadow: 0 0 6rpx 2rpx rgba(0, 0, 0, 0.1);
  border-radius: 16rpx;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.qms-item-left {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.qms-item-left text:last-child {
  font-size: 20rpx;
  color: #BBBBBB;
  margin-top: 12rpx;
}

.qms-item .right-image {
  width: 100rpx;
  height: 100rpx;
}

.qms-item .edit-image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: -12rpx;
  top: -12rpx;
}

.no-data {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.no-data image {
  width: 418rpx;
  height: 418rpx;
}

.no-data text {
  color: #9C9C9C;
}