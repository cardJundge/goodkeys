/* 添加模块---》第二步 */

page {
  height: 100%;
  width: 100%;
}

.second-body-container {
  height: 100%;
  width: 100%;
  position: relative;
}

.second-title {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
}

.second-title image {
  width: 612rpx;
  height: 68rpx;
}

.second-body-title {
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
}

.second-body-title text:last-child {
  color: #1a65ff;
}

.second-body-form {
  /* padding-bottom: 200rpx; */
}

.form-item {
  margin: 0 24rpx;
  height: 90rpx;
  border-bottom: 1px solid #e9e9e9;
}

.form-add {
  display: flex;
  align-items: center;
  color: #1a65ff;
}

.form-item image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 24rpx;
}

.form-select {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.form-select .left {
  display: flex;
  align-items: center;
}

.form-select .left input {
  width: 280rpx;
}

.form-select .right {
  display: flex;
  align-items: center;
}

.form-select .right text {
  margin-right: 24rpx;
  color: #909090;
}

.movable-area {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
}

.movable-area .movable-row {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border: 1px solid #eee;
  background: #fff;
}

.ready-place {
  background: #ccc;
}

.touch-sort {
  width: 80rpx;
  height: 90rpx;
  background: url('https://6f6d-omo-service-b6dza-1301029807.tcb.qcloud.la/images/sort_icon.png?sign=7aeb36235a74f320c8818464684d8451&t=1585208445') no-repeat center;
  background-size: 100% 100%;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 9;
}

.second-btn {
  width: 702rpx;
  height: 80rpx;
  margin: 60rpx auto;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #1a65ff;
  color: #fff;
  border-radius: 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
