/* 联盟成员 */

.union-member-body {
}

.member-top {
  width: 100%;
  height: 60rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
}

.search-bg {
  width: 100%;
  height: 30rpx;
  background: #1a65ff;
  border-radius: 0 0 20rpx 20rpx;
  position: relative;
}

.search-box {
  width: 100%;
  height: 60rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  bottom: -30rpx;
  top: 0;
  left: 0;
}

.search {
  width: 702rpx;
  height: 60rpx;
  background: #fff;
  border: 2rpx solid #f2f2f2;
  border-radius: 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.search image {
  width: 36rpx;
  height: 36rpx;
}

.member-content {
  /* margin-top: 60rpx; */
}

.member-content-title {
  padding: 12rpx 24rpx 0;
  font-size: 24rpx;
  color: #686868;
}

.member-content-list {
  width: 100%;
  height: 915rpx;
}

.member-content-leader>view:last-child {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
}

.member-content-leader>view:last-child image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 12rpx;
}

.member-content-leader>view:last-child text {
  font-size: 28rpx;
}

.member-content-item {
  width: 100%;
  height: 120rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f7f7f7;
}

.member-content-item-left {
  display: flex;
  align-items: center;
}

.member-content-item-btn {
  width: 100rpx;
  height: 40rpx;
  background: #e7e7e7;
  border-radius: 20rpx;
  margin-right: 24rpx;
  font-size: 22rpx;
  color: #686868;
  line-height: 40rpx;
  text-align: center;
}

.member-content-item image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 12rpx;
}

.member-content-item-text {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.member-content-item-text text {
  font-size: 28rpx;
}

.member-content-item-right {
  width: 280rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
}

.member-content-item-right view {
  width: 140rpx;
  height: 100%;
  color: #fff;
  text-align: center;
  line-height: 120rpx;
}

.member-content-item-right view:first-child {
  background: #1a65ff;
}

.member-content-item-right view:last-child {
  background: #ff7165;
}
