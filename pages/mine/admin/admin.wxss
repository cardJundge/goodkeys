/* 管理员 */
@import "../../index/common-top/common-top.wxss";

.search {
  width: 100%;
}

.admin-body {}

.no-data>image {
  width: 264rpx;
  height: 264rpx;
}

.no-data>text {
  color: #8e8e8e;
  margin: 55rpx 0 36rpx 0;
}

.no-data>view {
  width: 330rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #1a65ff;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.list-content {
  padding: 84rpx 24rpx 130rpx;
}

.list-content-item {
  width: 100%;
  box-shadow: 0 0 6px 2px rgba(0, 0, 0, 0.1);
  border-radius: 30rpx;
  padding: 24rpx;
  position: relative;
  margin-bottom: 24rpx;
}

.list-content-item .left {
  margin-right: 12rpx;
}

.list-content-item .left image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
}

.list-content-item .center {
  width: 574rpx;
}

.list-content-item .center .text-phone {
  font-size: 24rpx;
  color: #a3a3a3;
  display: block;
  margin-bottom: 24rpx;
}

.list-content-item .center .text-line {
  width: 280rpx;
  border-bottom: 1px dotted #a3a3a3;
  
}

.list-content-item .center .module-box {
  width: 100%;
  padding: 24rpx 0 0;
}

.list-content-item .center .module-box .module-item {
  height: 40rpx;
  font-size: 24rpx;
  color: #1a65ff;
  background: #C6D9FF;
  border-radius: 20rpx;
  padding: 0 12rpx;
  margin-bottom: 12rpx;
  margin-right: 12rpx;
}

.list-content-item .right {
  padding: 16rpx 0;
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}

.list-content-item .right image {
  width: 52rpx;
  height: 52rpx;
}

.list-content-item .right image:first-child {
  margin-right: 24rpx;
}

.list-btn {
  width: 310rpx;
  height: 80rpx;
  background: #1a65ff;
  color: #fff;
  position: fixed;
  bottom: 50rpx;
  left: 220rpx;
  border-radius: 40rpx;
}

.list-btn text {
  margin-left: 12rpx;
}