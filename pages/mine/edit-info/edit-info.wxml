<!--修改基本信息-->
<view class="edit-info-body">
  <view class="edit-avatar" bindtap="uploadAvatar">
    <text>头像</text>
    <view class="avatar-box">
      <image src="{{avatarUrl}}"></image>
      <i-icon class="icon" type="enter" font-size="18" color="#A6A6A6"/>
    </view>
  </view>
  <view class="edit-company">
    <text>公司名称</text>
    <view class="company-box">
      <input value="{{basicUserInfo.name}}" bindinput="companyInput" style="text-align:right"></input>
      <i-icon class="icon" type="enter" font-size="18" color="#A6A6A6"/>
    </view>
  </view>
  <view class="confirm-btn" bindtap="onConfirm">确定</view>
</view>
