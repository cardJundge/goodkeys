.mine-body {
}

.mine-card {
  width: 100%;
  height: 350rpx;
  background: url('https://6368-chedou-service-1257955119.tcb.qcloud.la/images/mine_bg.png?sign=6942a3f0cebc3a6dc7c8389b5efc5ec5&t=1570759586') no-repeat center;
  background-size: 100% 100%;
  border-radius: 0 0 40rpx 40rpx;
  position: relative;
  top: 0;
  left: 0;
}

.mine-card-box {
  width: 100%;
  height: 222rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}

.mine-card-info {
  display: flex;
  align-items: center;
}

.mine-avatar {
  width: 144rpx;
  height: 144rpx;
  position: relative;
  margin-right: 24rpx;
}

.mine-avatar-bg {
  width: 144rpx;
  height: 144rpx;
  margin-right: 36rpx;
}

.mine-avatar-img {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 12rpx;
  top: 12rpx;
  z-index: 999;
  border-radius: 50%;
}

.mine-text {
  display: flex;
  flex-direction: column;
}

.mine-text text:first-child {
  font-size: 34rpx;
  color: #fff;
  margin-bottom: 14rpx;
}

.vip-box {
  width: 140rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #ffbb6c;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0 12rpx;
}

.vip-box image {
  width: 24rpx;
  height: 24rpx;
}

.mine-card-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.1);
  text-align: center;
  line-height: 50rpx;
}

.mine-card-btn image {
  width: 50rpx;
  height: 50rpx;
}

.mine-list {
}

.mine-item {
  width: 100%;
  height: 117rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between
}

.mine-item image {
  width: 70rpx;
  height: 70rpx;
}

.mine-item-text {
  width: 608rpx;
  height: 117rpx;
  border-bottom: 2rpx solid #E2E2E2;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
