/* 我的商铺/开通商铺 */

page {
  height: 100%;
}

.shops-body {
  width: 100%;
  height: 100%;
}

.open-shops {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.open-explain {
  width: 100%;
  text-align: right;
  font-size: 24rpx;
  padding: 24rpx;
}

.open-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.open-content image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
}

.open-content-text01 {
  font-size: 50rpx;
  color: #3f78c7;
  margin-bottom: 24rpx;
}

.open-content-text02 {
  color: #6e6e7a;
  margin-bottom: 76rpx;
}

.open-content button {
  width: 370rpx;
  height: 80rpx;
  background: #1a65ff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.open-bottom-bg {
  width: 100%;
  height: 472rpx;
  background: url('https://6f6d-omo-service-b6dza-1301029807.tcb.qcloud.la/images/open_shops_bg.png?sign=e654084f98916bef77bc94a83032d028&t=1578451976') no-repeat center;
  background-size: 100% 100%;
}

.mine-shops {
}

.mine-income {
  display: flex;
  justify-content: space-between;
  padding: 24rpx;
  background: #1a65ff;
  color: #fff;
}

.mine-income-left {
  display: flex;
  align-items: center;
}

.mine-income-left text:last-child {
  font-size: 50rpx;
  margin-left: 12rpx;
}

/* 访客 */

.mine-vistor {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #1a65ff;
  color: #fff;
  padding: 0 24rpx 24rpx;
}

.mine-vistor view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mine-vistor view text:first-child {
  font-size: 36rpx;
}

.mine-vistor view text:last-child {
  font-size: 24rpx;
}

/* 添加商品/服务 */

.add-service {
  width: 100%;
  height: 170rpx;
  background: url('https://6f6d-omo-service-b6dza-1301029807.tcb.qcloud.la/images/mine_shops_top_bg.png?sign=fca705f55aa96b15c5ba7593e9333095&t=1578465223') no-repeat center;
  background-size: 100% 100%;
  display: flex;
  align-items: center;
}

.add-service image {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  margin-left: 170rpx;
}

.add-service view {
  font-size: 40rpx;
  color: #fff;
}

/* 管理列表 */

.manage-list {
}

.manage-item {
  width: 100%;
  height: 142rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #e2e2e2;
}

.manage-item image {
  width: 70rpx;
  height: 70rpx;
}

.manage-item-text {
  width: 608rpx;
  height: 142rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
