/* 添加分类 */

.add-classification-body {
  padding: 0 24rpx;
}

.add-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid #E3E3E3;
}

.add-item input {
  text-align: right;

}

.add-btn {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background: #1a65ff;
  border-radius: 40rpx;
  font-size: 36rpx;
  margin-top: 24rpx;
}