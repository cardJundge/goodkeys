/* 客户管理 */

page {
  height: 100%;
}

.customer-body {
  height: 100%;
}

.customer-null {
  height: 100%;
  margin-top: 140rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.customer-null-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.customer-null-box view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.customer-null-box view:first-child {
  margin-bottom: 182rpx;
}

.customer-null-box view:first-child image {
  width: 252rpx;
  height: 224rpx;
  margin-bottom: 45rpx;
}

.customer-null-box text {
  font-size: 36rpx;
  color: #6e6e7a;
}

.customer-null-box view:last-child image {
  width: 100rpx;
  height: 100rpx;
}

.customer-null-box text {
  font-size: 36rpx;
  color: #6e6e7a;
}

.customer-content {
  height: 100%;
  padding: 0 24rpx;
}

.search-box {
  width: 100%;
  height: 84rpx;
  padding: 12rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.search {
  width: 570rpx;
  height: 60rpx;
  padding: 0 24rpx;
  background: #fff;
  border: 2rpx solid #f2f2f2;
  border-radius: 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search image {
  width: 36rpx;
  height: 36rpx;
}

.search-btn {
  width: 120rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #1a65ff;
  color: #fff;
}

.customer-list {
  padding: 12rpx 0;
}

.customer-item {
  width: 100%;
  height: 312rpx;
  box-shadow: 0 0 4rpx 0 rgba(0, 0, 0, 0.20);
  border-radius: 30rpx;
  padding: 24rpx;
}

.item-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.item-info-left {
  display: flex;
  align-items: center;
}

.item-info-left>image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.item-info-left-text {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.item-info-left-text view {
 display: flex;
 align-items: center;
}

.item-info-left-text view text:nth-child(1) {
  width: 4rpx;
  height: 4rpx;
  border-radius: 50%;
  background: #cbcbcb;
}

.item-info-left-text view text:nth-child(2) {
  width: 306rpx;
  margin: 0 1rpx;
  border-bottom: 1px dotted #cbcbcb;
}

.item-info-left-text view text:nth-child(3) {
  width: 4rpx;
  height: 4rpx;
  border-radius: 50%;
  background: #cbcbcb;
}

.item-info-right {
  font-size: 24rpx;
  color: #6E9EFF;
}

.item-impression {
  display: flex;
  align-items: flex-start;
}

.item-impression image {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  margin-right: 6rpx;
}

.item-impression>view:first-child {
  width: 180rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.tags-box {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.tags-item {
  padding: 0 12rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #6e9eff;
  color: #fff;
  border-radius: 20rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  font-size: 24rpx;
}

.more-btn {
  display: flex;
  justify-content: flex-end;
  font-size: 24rpx;
  color: #6E9EFF;
}
