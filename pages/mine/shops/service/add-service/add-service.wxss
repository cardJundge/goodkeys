.add-service-body {
}

.add-service-form {
  width: 100%;
  padding: 0 24rpx;
}

.input-box {
  width: 100%;
  padding: 24rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #c6c6c6;
}

.direction-input-box {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.direction-input-box textarea {
  width: 100%;
  height: 140rpx;
  margin-top: 12rpx;
}

.input-box input {
  text-align: right;
}

.image-box {
  width: 100%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 12rpx 0;
}

.image-item {
  width: 340rpx;
  height: 128rpx;
  background: #f3f3f3;
  color: #898989;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 22rpx;
  margin-bottom: 12rpx;
  position: relative;
}

.del-icon {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
}

.image-item:nth-child(2n) {
  margin-right: 0
}

.image-item image {
  width: 340rpx;
  height: 128rpx;
}

.add-btn {
  width: 702rpx;
  height: 80rpx;
  background: #1a65ff;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  border-radius: 40rpx;
  margin: 24rpx 0;
}
