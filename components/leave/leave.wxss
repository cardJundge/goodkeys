/* 请假审批框 */
.leave-body {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.leave-content {
  width: 626rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between
}

.top-title {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  font-size: 36rpx;
}

.input-title {
  width: 100%;
  padding: 12rpx 24rpx 0 24rpx;
  color: #7F7F7F;
  font-size: 24rpx;
}

.input-box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  font-size: 24rpx;
}

.input-box textarea {
  width: 100%;
  height: 150rpx;
  box-shadow: 0 0 4rpx 2rpx rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
}


.bottom-btn-bar {
  display: flex;
  align-items: center;
  width: 100%;
}

.bottom-btn-bar view {
  width: 50%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom-btn-bar view:first-child {
  background: #F4F4F4;
  color: #7F7F7F;
  border-radius: 0 0 0 20rpx;
}

.bottom-btn-bar view:last-child {
  background: #1a65ff;
  color: #fff;
  border-radius: 0 0 20rpx 0;
}