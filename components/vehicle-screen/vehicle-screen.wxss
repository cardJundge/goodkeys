/* 车务调查列表筛选 */
.container{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 160rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  z-index: 10;
}

.status-content{
  width: 100%;
  height: 240rpx;
  background: #fff;
  position: relative;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 20rpx;
}

.status-item {
  width: 180rpx;
  height: 70rpx;
  background: #EFEFEF;
  color: #747474;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.time-content {
  width: 100%;
  height: 118rpx;
  background: #fff;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.time-item {
  width: 230rpx;
  height: 70rpx;
  background: #EFEFEF;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.time-item-other {
  color: #B2B2B2;
}

.time-line {
  width: 20rpx;
  height: 4rpx;
  background: rgba(0, 0, 0, 0.3);
}

.time-btn {
  width: 168rpx;
  height: 70rpx;
  border-radius: 35rpx;
  background: #EFEFEF;
  color: #747474;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.time-btn-active {
  background: #1a65ff;
  color: #fff;
}

.container-more {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  z-index: 10000;
}

.more-content {
  width: 558rpx;
  height: 100%;
  background: #fff;
  padding: 36rpx 12rpx;
  position: relative;
  top: 0;
  right: 0;
  left: 96rpx;
  bottom: 0;
}

.more-title {
  padding-left: 12rpx;
}

.more-box {
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
  flex-wrap: wrap;
  padding: 24rpx 0;
}

.more-box-item {
  width: 154rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #747474;
  background: #EFEFEF;
  border-radius: 14rpx;
  margin:0 12rpx;
  margin-bottom: 24rpx;
}

.more-btn {
  width: 100%;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  bottom: 36rpx;
  right: 0;
}

.more-btn>view {
  width: 240rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.more-btn>view:first-child {
  background: #ECECEC;
}

.more-btn>view:last-child {
  background: #1a65ff;
  color: #fff;
}

.is-active {
  background: #F0F5FF;
  color: #1A65FF;
}