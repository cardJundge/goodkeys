/* 测试分享框 */
.share-body {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.share-box {
  width: 500rpx;
  height: 1070rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.share-content {
  width: 500rpx;
  height: 870rpx;
  padding: 12rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share-save {
  width: 308rpx;
  height: 70rpx;
  background: url('https://6f6d-omo-service-b6dza-1301029807.tcb.qcloud.la/images/share_save_bg.png?sign=4f73c58fbdda74e9eab97154e9f59096&t=1584066943') no-repeat center;
  background-size: 100% 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}

