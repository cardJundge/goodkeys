/* 审核框 */

.module-body {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.module-content {
  width: 640rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.top-title {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  font-size: 36rpx;
}

.state-title {
  font-size: 34rpx;
  width: 100%;
  padding: 12rpx 24rpx;
}

.state-box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 0 24rpx;
}

.state-box radio:first-child {
  margin-right: 36rpx;
}

.input-title {
  font-size: 34rpx;
  width: 100%;
  padding: 12rpx 24rpx;
}

.input-box {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
}

.input-box textarea {
  width: 100%;
  box-shadow: 0 0 4rpx 2rpx rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
}

.prompt-textarea {
  width: 100%;
  height: 300rpx;
  box-shadow: 0 0 4rpx 2rpx rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
}

.bottom-btn-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  font-size: 34rpx;
  padding: 24rpx;
}

.bottom-btn-bar view {
  width: 216rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
}

.bottom-btn-bar view:first-child {
  border: 2rpx solid #1a84ff;
  color: #1a65ff;
}

.bottom-btn-bar view:last-child {
  background: #1a65ff;
  color: #fff;
}

.prompt-bottom-btn-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  font-size: 34rpx;
  padding: 24rpx;
}

.prompt-confirm {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  width: 100%;
  background: #1a65ff;
  color: #fff;
}
