/* 订阅消息弹框组件 */
.container {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 750rpx;
  height: 520rpx;
  background: #fff;
  border-radius: 34rpx 34rpx 0 0;
  padding: 36rpx 24rpx 12rpx 24rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, sans-serif;
}

.topbox{
  display: flex;
  width: 100%;
  align-items: center;
  font-size: 24rpx;
  margin-bottom: 24rpx;
}

.topbox>image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}



.checkboxgroup{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.labelbox{
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #eee;
}

.btn-area{
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
}

.btn-area>button:first-child{
  width: 240rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #1a65ff;
  border: 2rpx solid #1a65ff;
  border-radius: 12rpx;
  background: #fff;
}

.btn-area>button:last-child{
  width: 240rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  border-radius: 12rpx; 
  background: #1a65ff;
}

.scrollbox{
  width: 100%;
  max-height: 240rpx;
  margin: 24rpx auto;
}