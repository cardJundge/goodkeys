/* 添加模块 */

.module-body {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.module-content {
  width: 670rpx;
  height: 780rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-img {
  width: 670rpx;
  height: 780rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-img image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 24rpx;
}

.close-icon {
  position: absolute;
  top: 0;
  right: 24rpx;
}

.module-title {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  margin: 24rpx 0 24rpx;
  position: relative;
}

.module-list {
  padding: 24rpx 40rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.module-list-scroll {
  width: 100%;
  height: 556rpx;
  overflow: scroll;
}

.module-item {
  width: 170rpx;
  height: 202rpx;
  box-shadow: 0 0 6rpx 0 rgba(0, 0, 0, 0.10);
  border-radius: 20rpx;
  margin-bottom: 50rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  margin-right: 40rpx;
}

.module-item:nth-child(3n) {
  margin-right: 0;
}

.module-item image {
  width: 106rpx;
  height: 106rpx;
}

.circle {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  border: 2rpx solid #979797;
  z-index: 999;
  background: #fff;
  position: absolute;
  top: -20rpx;
  right: -20rpx;
}

.icon {
  position: absolute;
  top: -22rpx;
  right: -22rpx;
}

.module-btn {
  width: 630rpx;
  height: 80rpx;
  margin: 24rpx auto;
  background: #1a84ff;
  border-radius: 60rpx;
  color: #fff;
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
  text-align: center;
  line-height: 80rpx;
}
